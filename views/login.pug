extends layout

block content
    .w3-container.w3-margin
        .w3-container.w3-teal
            h3 Introduza as suas credenciais
        form.w3-container(action='/login' method='POST')
            label Email
            input.w3-input(type='text' name='email')
            label Password
            input.w3-input(type='password' name='password')
            input.w3-btn.w3-teal(type="submit" value="Enviar")