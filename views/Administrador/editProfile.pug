

extends header
block content
    // Blog entries
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css', enctype="multipart/form-data")
    .w3-card-4.w3-margin.w3-white
      .w3-container.w3-center
         h1 Perfil ✏️
    .w3-row.w3-center
        .w3-col.l2.sl2
            .w3-card-4.w3-purple
                    .w3-container
        .w3-col.l8.sl2        
            // Blog entry    
            .w3-card-4.w3-margin.w3-white
                .w3-container
                    form(action="/administrador/editPerfil/"+user._id method="POST" enctype="multipart/form-data")
                        .container(id="fileInputGroup")
                            br
                            
                            p
                            .div
                                label(for="nome") Nome:
                                .div
                                    input.w3-input.w3-border.w3-round.form-control(type="text",name="nome", value=user.nome)
                            p
                            .div
                                label(for="filiacao") Filiação:
                            .div
                                select.w3-input.w3-border.w3-round.form-control(type="text" name="filiacao", value=user.filiacao)
                                    option(value="estudante") Estudante
                                    option(value="docente") Docente
                                    option(value="outro") Outro
                            .w3-container.w3-white
                            br
                            .div
                                label(for="file") Carregar Foto de Perfil:
                                    br
                                    img(src=avatar alt='Nature' style='width:10%')
                                    input.custom-file-input(type="file" name="file")
                                              
                        hr
                        .w3.bottom   
                            input.w3-button.w3-padding-large.w3-purple.w3-border(type="submit",value="Submit")
                        br
    br
    // END w3-content
