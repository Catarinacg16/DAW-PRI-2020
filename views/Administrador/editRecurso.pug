
extends header
block content
    // Blog entries
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    .w3-card-4.w3-margin.w3-white
      .w3-container
         h1.w3-center Editar Recurso
    .w3-row.w3-center
        // Blog entries 
        .w3-col.l3 
            .w3-card-4.w3-margin.w3-white   
              .w3-container
                img(src='/images/updater.png' alt='Natur' style="width:100%;padding-top:3.4%")
                h3 Editar Recursos
        .w3-col.l9.w3-right    
            // Blog entry    
            .w3-card-4.w3-margin.w3-white   
              .w3-container
                form.w3-center(action="/administrador/editar/"+recursos._id method="POST", enctype="multipart/form-data")
                    .w3-container.w3-center(id="fileInputGroup")
                        //.w3-half.w3-purple                          
                        .w3-center
                            .w3-card.w3-margin.w3-margin-top
                              .w3-container.w3-white
                                h4
                                  b Editor de Recursos
                            hr
                            p
                            br
                            .div
                                label(for="visibilidade") Visibilidade:                   
                            .div
                                select.w3-input.w3-border.w3-round.form-control(type="text",value=recursos.visibilidade,name="visibilidade")
                                    option(value="Público") Público
                                    option(value="Privado") Privado
                            p
                            .div
                                label(for="tipo") Tipo:
                            .div
                                select.w3-input.w3-border.w3-round.form-control(type="text", value=recursos.tipo, name="tipo")
                                    option(value="Tese") Tese
                                    option(value="Relatório") Relatório
                                    option(value="Artigo") Artigo
                                    option(value="Aplicação") Aplicacão
                                    option(value="Slides") Slides
                                    option(value="Exames") Exames
                                    option(value="Resoluções") Resoluções
                            p
                            .div
                                label(for="desc") Descrição:
                            .div
                                input.w3-input.w3-border.w3-round.form-control(type="text",value=recursos.descricao,name="descricao")
                            p
                            .div
                                label(for="titulo") Título:
                            .div
                                input.w3-input.w3-border.w3-round.form-control(type="text", value=recursos.titulo,name="titulo")
                            p
                            .div
                                label(for="dc") Data de Criação:
                            .div
                                input.w3-input.w3-border.w3-round.form-control(type="text",value=recursos.dataCriacao, name="dataCriacao")
                            hr
                            .div
                                label(for="autor") Autor:
                            .div(id="addAutor")
                                input.w3-input.w3-border.w3-round.form-control(type="button", onclick="addAutor()", value="Adicionar Autor")
                                each a in recursos.autor
                                    td 
                                        .div(id="remAutor"+a)
                                            input.w3-input.w3-threequarter.w3-border.w3-round.form-control(type="text",value=a,name="autor")
                                            input.w3-input.w3-quarter.w3-light-grey.w3-button.w3-right.w3-border(type="button", onclick=`remAutor(\"${a}\")`, value="X")
                                                           
                            hr
                            .div
                                label(for="tags") Adicionar tags:
                                p
                            .div(id="addTag")
                                input.w3-input.w3-border.w3-round.form-control(type="button", onclick=`addTag()`, value="Adicionar Tag")
                                each a in recursos.tags
                                    td 
                                        .div(id="remTag"+a)
                                            input.w3-input.w3-threequarter.w3-border.w3-round.form-control(type="text",value=a,name="tags")
                                            input.w3-input.w3-quarter.w3-light-grey.w3-button.w3-right.w3-border(type="button", onclick=`remTag(\"${a}\")`, value="X")

                                                               
                            hr
                            .w3.bottom   
                                input.w3-button.w3-padding-large.w3-purple.w3-border(type="submit",value="Submit")
                                p
                                     button.w3-button.w3-padding-large.w3-white.w3-border
                                        a(href="/administrador/deleter/"+recursos._id) Eliminar
                                
                                 
        
          
    br
    // END w3-content
