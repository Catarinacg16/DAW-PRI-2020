extends header
block content
    // Blog entries
    // Blog entries
    .w3-card-4.w3-margin.w3-white
      .w3-container
        h1 Página de Recurso
    .w3-row
        // Introduction menu
        .w3-col.l2
          // About Card
          .w3-card.w3-margin.w3-margin-top
            .w3-container.w3-white
              img(src='/images/user.png' alt='Nature' style='width:100%')
              h4
                b=produtor.nome
              p
                |
                =produtor.filiacao
          hr
          // Labels / tags
          .w3-card.w3-margin
            .w3-container.w3-padding.w3-light-gray
              h4 Tags do post
            .w3-container.w3-white
              p
                span.w3-tag.w3-black.w3-margin-bottom Teses
                span.w3-tag.w3-light-grey.w3-small.w3-margin-bottom Exercicios Resolvidos
                span.w3-tag.w3-light-grey.w3-small.w3-margin-bottom Testes
                span.w3-tag.w3-light-grey.w3-small.w3-margin-bottom Material
                span.w3-tag.w3-light-grey.w3-small.w3-margin-bottom Sebentas
                span.w3-tag.w3-light-grey.w3-small.w3-margin-bottom Apontamentos
          // END Introduction Menu
        // Blog entries 
        .w3-col.l10.s12
            // Blog entry    
            .w3-card-4.w3-margin.w3-white
              .w3-container
                h3
                  b=recurso.titulo
                h5 
                  |Autor :  
                  b=recurso.autor
                  span.w3-opacity 
                    =recurso.dataRegisto
              .w3-container
                p
                  |
                  =recurso.descricao
                .w3-row
                  .w3-col.m8.s12
                    p
                    a.w3-bar-item.w3-button(href="/produtor/download/"+recurso.titulo+"/"+recurso._id)
                      button.btn
                       i.fa.fa-download
                        |  Download
                  .w3-col.m4.w3-hide-small
                    p
                      span.w3-padding-large.w3-right
                        b Comentários &nbsp;
                        span.w3-badge=recurso.comentarios.length
                    p
                      span.w3-padding-large.w3-right
                        b Downloads &nbsp;
                        span.w3-badge=recurso.numDowns
                    p
                      span.w3-padding-large.w3-right
                        b Pontuação : 
                        - for (var i = 0; i < recurso.pontuacao; i++) {
                            span.fa.fa-star.checked
                        -}
                  
            // END BLOG ENTRIES
            // Posts
            .w3-card.w3-margin
              .w3-container.w3-padding-white.w3-light-gray
                h4 Comentarios
              ul.w3-ul.w3-hoverable.w3-white
                each com in recurso.comentarios
                  li.w3-padding-16
                    b=com.nome_utilizador
                    br
                    b=com.id_coment
                    b=com.data
                    br
                    span=com.descricao
                    br
                    .div(id=com.id_coment)
                      input.btn.btn-secondary.mr-5(type="button" id="b"+com.id_coment value="Ver replies" onclick=`addi( ${com} )`)
                    p
                    .div(id="addReply")
                      input.btn.btn-secondary.mr-5(type="button", onclick="addReply()", value="Responder ⤵️")                           
                .div
                .w3-container
                  form(action="/produtor/recurso/"+recurso._id ,method="POST", enctype="form-data")
                    li.w3-padding-16
                      input.form-control(type="text",placeholder="comentário ...",name="descricao")
                      input.btn.btn-lg.btn-primary(type="submit",value="Submit")
                br

            hr
        // END GRID
    br
    // END w3-content