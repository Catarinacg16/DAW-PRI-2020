
extends header
block content
    // Blog entries
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    .w3-card-4.w3-margin.w3-white
      .w3-container
         h1 Carregar novo Ficheiro
    .w3-row
        // Blog entries 
        .w3-col.l9        
            // Blog entry    
            .w3-card-4.w3-margin.w3-white
              .w3-container
                form.w3-center(action="/produtor/upload" method="POST", enctype="multipart/form-data")
                    .w3-container.w3-center(id="fileInputGroup")
                        //.w3-half.w3-purple                          
                        .w3-center
                            .w3-card.w3-margin.w3-margin-top
                              .w3-container.w3-white
                                h4
                                  b Upload de Ficheiros
                            hr
                            p
                            br
                            .div
                                label(for="visibilidade") Visibilidade:                   
                            .div
                                select.w3-input.w3-border.w3-round.form-control(type="text",name="visibilidade")
                                    option(value="Público") Público
                                    option(value="Privado") Privado
                            p
                            .div
                                label(for="tipo") Tipo:
                            .div
                                select.w3-input.w3-border.w3-round.form-control(type="text", name="tipo")
                                    option(value="Tese") Tese
                                    option(value="Relatório") Relatório
                                    option(value="Artigo") Artigo
                                    option(value="Aplicação") Aplicacão
                                    option(value="Slides") Slides
                                    option(value="Exames") Exames
                                    option(value="Resoluções") Resoluções
                            p
                            .div
                                label(for="desc") Descrição:
                            .div
                                input.w3-input.w3-border.w3-round.form-control(type="text",placeholder="descrição",name="descricao")
                            p
                            .div
                                label(for="titulo") Título:
                            .div
                                input.w3-input.w3-border.w3-round.form-control(type="text", placeholder="título",name="titulo")
                            p
                            .div
                                label(for="dc") Data de Criação:
                            .div
                                input.w3-input.w3-border.w3-round.form-control(type="text",placeholder="AAAA-MM-DD",name="dataCriacao")
                            hr
                            .div
                                label(for="autor") Autor:
                            .div(id="addAutor")
                                input.w3-input.w3-border.w3-round.form-control(type="text",placeholder="autor",name="autor")
                                input.w3-input.w3-border.w3-round.form-control(type="button", onclick="addAutor()", value="Adicionar Autor")                           
                            hr
                            .div
                                label(for="tags") Adicionar tags:
                                p
                            .div(id="addTag")
                                input.w3-input.w3-border.w3-round.form-control(type="button", onclick="addTag()", value="Adicionar Tag")                           
                            p
                            .w3-half.w3-center
                            .w3-card-4.w3-margin
                                img.w3-image(src='/images/upload.png' width='150' height='80')
                                input.custom-file-input(type="file", name="file", required)

                            .w3.bottom   
                                input.w3-button.w3-padding-large.w3-purple.w3-border(type="submit",value="Submit")
                            p
        .w3-col.l3
           .w3-container
                .w3-card.w3-margin.w3-margin-top
                  .w3-container.w3-white
                    h4
                      b Ficheiros Carregados
                hr                 
                        
           
  
          
    br
    // END w3-content
